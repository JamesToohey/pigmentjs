{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "no-param-reassign": "off",
        "default-case": "off",
        "yoda": "off",
        "react/jsx-indent": "off",
        "react/jsx-filename-extension": "off",
        "object-curly-spacing": "off",
        "arrow-body-style": "off"
    }
}
